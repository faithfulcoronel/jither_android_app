<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Medical Theme - Light Mode -->
    <style name="Theme.Medialert_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Healthcare Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <!-- Secondary Healing Colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <!-- Tertiary Care Colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error Colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Shape Theming - Rounded medical cards -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MediAlert.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediAlert.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MediAlert.LargeComponent</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.MediAlert.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.MediAlert.Button.TextButton</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.MediAlert.CardView</item>

        <!-- FAB Style -->
        <item name="floatingActionButtonStyle">@style/Widget.MediAlert.FloatingActionButton</item>
    </style>

    <style name="Theme.Medialert_project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Medialert_project.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Medialert_project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.MediAlert.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MediAlert.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.MediAlert.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.MediAlert.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.MediAlert.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.MediAlert.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.MediAlert.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.MediAlert.FAB</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="ShapeAppearance.MediAlert.FAB" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>